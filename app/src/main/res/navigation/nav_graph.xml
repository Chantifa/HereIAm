<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/homeFragment" android:name="ch.ffhs.esa.hereiam.fragments.HomeFragment"
        android:label="Home" tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ch.ffhs.esa.hereiam.fragments.ProfileFragment" android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/actionUpdateEmail"
            app:destination="@id/updateEmailFragment"/>
        <action
            android:id="@+id/actionUpdatePassword"
            app:destination="@id/updatePasswordFragment"/>
    </fragment>
    <fragment
        android:id="@+id/updateEmailFragment"
        android:name="ch.ffhs.esa.hereiam.fragments.UpdateEmailFragment"
        android:label="Update Email" tools:layout="@layout/fragment_update_email">
        <action
            android:id="@+id/actionEmailUpdated"
            app:destination="@id/profileFragment"/>
    </fragment>
    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="ch.ffhs.esa.hereiam.fragments.UpdatePasswordFragment"
        android:label="Update Password"
        tools:layout="@layout/fragment_update_password">
        <action
            android:id="@+id/actionPasswordUpdated"
            app:destination="@id/profileFragment"/>
    </fragment>
</navigation>