<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/gap_default">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                style="@android:style/Widget.Material.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_gravity="bottom"
                android:contentDescription="@string/desc_edit_your_location"
                android:src="@drawable/ic_edit_location_black_24dp" />

            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/label_your_location" />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/text_your_location"
                android:textSize="24sp"
                android:textStyle="bold" />

        </GridLayout>

        <ImageView
            android:id="@+id/googleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_default"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc_google_maps"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            app:srcCompat="@drawable/google_maps_screenshot" />

        <TextView
            android:id="@+id/label_all_entries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_large"
            android:layout_marginEnd="@dimen/gap_default"
            android:text="@string/text_last_entries"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/googleMaps" />

        <ImageView
            android:id="@+id/img_placeholder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/gap_default"
            android:layout_marginStart="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_default"
            android:layout_marginEnd="@dimen/gap_default"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc_placeholder"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_all_entries"
            app:srcCompat="@drawable/placeholder" />

        <TextView
            android:id="@+id/heading_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_default"
            android:layout_marginEnd="@dimen/gap_default"
            android:text="@string/heading_placeholder"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_placeholder" />

        <TextView
            android:id="@+id/text_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_default"
            android:layout_marginEnd="@dimen/gap_default"
            android:text="@string/text_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading_placeholder" />


        <Button
            android:id="@+id/allEntriesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/gap_default"
            android:layout_marginTop="@dimen/gap_large"
            android:layout_marginEnd="@dimen/gap_default"
            android:text="@string/label_all_entries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_placeholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>