<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_googred100"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="6"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="134dp"
        android:layout_height="76dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/logo"
        android:padding="8dp"
        android:src="@drawable/hereiam" />

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/welcome_content"
        android:layout_width="200dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="0"
        android:padding="8dp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/what_text"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:padding="8dp"
        android:text="@string/what"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:padding="8dp"
        android:text="@string/what_else"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dummy_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:background="@color/black_overlay"
        android:backgroundTint="#000000"
        android:padding="8dp"
        android:text="@string/dummy_button"
        android:textColor="#FFFFFF" />
</GridLayout>